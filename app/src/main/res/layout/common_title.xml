<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myrel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_title_height"
    android:background="@color/title_bg_color">

    <TextView
        android:id="@+id/common_title_bar_cancle"
        android:layout_width="50dp"
        android:layout_height="@dimen/public_title_height"
        android:text="返回"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text"
        />

    <TextView
        android:id="@+id/common_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/common_title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="编辑"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text" />


</RelativeLayout>